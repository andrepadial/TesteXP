@model IEnumerable<Mvc_App_Crud.Models.Departamento>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeparatamentoNome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DeparatamentoNome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.DepartamentoID }) |
            @Html.ActionLink("Visualizar", "Details", new { id=item.DepartamentoID }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.DepartamentoID }, new { @onClick =  "javascript:return " + "confirm('Confirma a exclusão ?')"})
        </td>
    </tr>
}

</table>
